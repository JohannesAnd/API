html
    head
        link(href='/views/MainMenu.css', rel='stylesheet')
        link(href='/styles.css', rel='stylesheet')

        meta(name="viewport" content="width=device-width, initial-scale=1")

        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-beta1/jquery.min.js' type="text/javascript")
        script(src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/1.0.2/Chart.js' type="text/javascript")
        script(src="https://maps.googleapis.com/maps/api/js" type="text/javascript")
        title TripTrackr
        block header
    body
        .container
            block menu
                #title
                    a(href="/")
                        img(src="/images/Logo.png")
                #menu
                    nav(role="full-horizontal")
                        ul
                            li
                                if user
                                    a(href="/signOut") Sign out
                                else
                                    a(href="/signIn") Sign in
                            li
                                a(href="/users") Users
                            li
                                a(href="/organizations") Organizations
            .content
                block content
            .footer
                block footer
